{
  "name": "mcp-server-db2i",
  "version": "1.0.0",
  "description": "MCP server for IBM DB2 for i (DB2i) database queries and metadata inspection",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mcp-server-db2i": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ibm",
    "db2",
    "db2i",
    "as400",
    "iseries",
    "ibm-i",
    "jt400",
    "jdbc"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Strom-Capital/mcp-server-db2i.git"
  },
  "bugs": {
    "url": "https://github.com/Strom-Capital/mcp-server-db2i/issues"
  },
  "homepage": "https://github.com/Strom-Capital/mcp-server-db2i#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "node-jt400": "^6.0.1",
    "node-sql-parser": "^5.4.0",
    "pino": "^10.2.0",
    "pino-pretty": "^13.1.3",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.9",
    "@vitest/coverage-v8": "^4.0.17",
    "eslint": "^9.39.2",
    "knip": "^5.81.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vitest": "^4.0.17"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
